		setSize(640, 480);
		setDefaultCloseOperation(JFrame.DISPOSE_ON_CLOSE);
		add(mainPanel.createMainPanel());
		
		
	}
	
	public void paint(Graphics g){
		g.drawLine(100, 100, 100, 200);
	}
		
	public static void main(String[] args) {
		GUI gui = new GUI();
		gui.setVisible(true);
